# -*- mode: snippet -*-
# name: Initial .dir-locals.el configuration
# key: dirl
# --

(
 ;; Global tasks
 (nil . ((vg-project-tasks . (
                              ;; Tasks here:
                              ("Format Files" . "pnpm run format")
                              ))))

 ;; PHPCS:
 (php-mode
  (eval . (setq-local
           flycheck-php-phpcs-executable
           (concat
            (vg-get-project-root)
            "vendor/bin/phpcs"))))

 ;; ESlint:
 (js-mode
  (eval . (setq-local
           flycheck-javascript-eslint-executable
           (concat
            (vg-get-project-root)
            "node_modules/.bin/eslint"))))

 ;; Stylelint:
 (css-mode
  (eval . (setq-local
           flycheck-css-stylelint-executable
           (concat
            (vg-get-project-root)
            "node_modules/.bin/stylelint")

           flycheck-stylelintrc
           (concat
            (vg-get-project-root)
            ".stylelintrc.json"))))
)
